#include<stdio.h>
int main () { 
int i = 2 , n , sum = 0 ;
printf("Enter number : ") ;
scanf("%d" , &n) ;
while (i<=2*n)
{
    if (i%2 == 0)
    {
        sum = sum + i ;
        i++ ;
    }
    else
    {
        i++ ;
    }
}
printf("Sum of first %d even natural numbers is %d " , n ,sum) ;
return 0 ; 
}