#include<stdio.h>
#include<stdlib.h>
int main()
{
    int *p , n , i , largest = -9999999 ;
    printf("Enter size of array : ");
    scanf("%d",&n);
    p = (int*)calloc(n,sizeof(int));
    printf("\nEnter elements : ");
    for ( i = 0; i < n; i++)
    scanf("%d",&p[i]);
    for ( i = 0; i < n; i++)
    {
        if(p[i] > largest)
        largest = p[i];
    }
    printf("\nlargest element is %d",largest);
    free(p);
}
