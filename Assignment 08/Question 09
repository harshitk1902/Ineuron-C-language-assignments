#include<stdio.h>
int main()
{
    int i , j , a ;
    for (int i=1 ; i<=4 ; i++)
    {
        a = 1 ;
        for (int j=1 ; j<=7 ; j++)
        {
            if(j>=i && j<=8-i)
            {
                if(j>=5 && i>=1)
                a = a-2;
                
                printf("%d" ,a);
                a++;
            }
            else
            printf(" ");
        }
        printf("\n");
    }
    return 0 ;
}