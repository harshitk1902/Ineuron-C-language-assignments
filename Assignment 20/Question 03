void sort(int * , int);

// function to sort an array of int type values using pointers

void sort(int *ptr,int size)
{
    int temp ;
    for(int i = 0 ; i < size ; i++)
    for(int j = i+1 ; j < size ; j++)
    {
        if(ptr[i]>ptr[j])
        {
            temp = ptr[j];
            ptr[j] = ptr[i];
            ptr[i] = temp;
        }
    }
}
