#include<stdio.h>
int main()
{
    int a[100][100] , i , j , n ;
    printf("Enter the size of square matrix : ") ;
    scanf("%d" , &n); 
    printf("Enter the elements of matrix :\n");
    for(i=0 ; i<n ; i++)
    for(j=0 ; j<n ; j++)
    scanf("%d" , &a[i][j]);

    for(i=0 ; i<n ; i++)
    {
        for(j=0 ; j<n ; j++)
        {
            if(i>j)
            a[i][j] = 0 ;
        }
    }
    printf("\nlower triangular matrix is : \n") ;
    for(i=0 ; i<n ; i++)
    {
        for(j=0 ; j<n ; j++)
        {
            printf("%3d " , a[i][j]) ;
        }
        printf("\n");
    }
}